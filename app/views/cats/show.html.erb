<div class="row header-image">
  <div class="col-md-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval=10000>
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <%= image_tag "mv_1.jpg", class: "image" %>
        </div>
        <div class="item">
          <%= image_tag "mv_2.jpg", class: "image" %>
        </div>
      </div>
      <!-- Left and right controls -->
      <!-- <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
      </a> -->
    </div>
  </div>
</div>

<div class="container-fluid content">
  <div class="row menu">
    <div class="col-md-12">
      <ul>
        <li>
          <%= link_to "ALL", root_path %>
        </li>
        <% @cats.each do |cat| %>
        <li class="category-menu">
          <%= link_to(cat.category_name, "/cats/#{cat.id}") %>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row items-wrapper">
    <ul>
      <% @products.each do |product| %>
      <li class="item col-xs-6 col-sm-3 col-md-2">
        <%= link_to image_tag(product.img_name, :class => "item-image"), :controller => 'products', :action => 'show', :id => product.id %>
        <div class="item-detail">
          <div class="item-name">
            <%= product.name %>
          </div>
          <div class="item-price">
            Rs<%= product.price %>
          </div>
          <div class="item-category">
            #<%= product.category_id %>
          </div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<% if @admin.password_digest == session[:password] %>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Category name:</strong>
    <%= @cat.category_name %>
  </p>

  <%= link_to 'Edit', edit_cat_path(@cat) %> |
  <%= link_to 'Back', cats_path %>
<% end %>
