<div class="container">
  <div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">

      <%= form_tag :url => { :controller => :users, :action => :update } do %>
      <div class="form-group">
        <table class="table bordered-table">
          <thead>
            <th></th>
            <th>Please edit your info.</th>
          </thead>
          <tbody>
            <tr>
              <td>User Name</td>
              <td><%= text_field_tag :username, params[:username], value: @user.username, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Password</td>
              <td><%= password_field_tag :password, params[:password], value: @user.password, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Confirm Password</td>
              <td><%= password_field_tag :password_confirmation, params[:password], value: @user.password, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Email</td>
              <td><%= text_field_tag :email, params[:email], value: @user.email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Phone</td>
              <td><%= text_field_tag :phone, params[:phone], value: @user.phone, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Your Image</td>
              <td><span class="btn btn-warning btn-file">
                Choose File
                <%= file_field_tag :image %>
              </span></td>
            </tr>
            <tr>
              <td></td>
              <td><%= submit_tag "Submit", class: "btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <% end %>

    </div>
    <div class="col-md-3">

    </div>
  </div>
</div>
