<div class="container" id="register-form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>REGISTER</h3>
      <div class="buttons">
        <ul>
          <li><div class="btn btn-default btn-facebook">
            <span class="fa fa-facebook"></span>
            Facebook
          </div></li>
          <li><div class="btn btn-default btn-twitter">
            <span class="fa fa-twitter"></span>
            Twitter
          </div></li>
          <li><div class="btn btn-default btn-google">
            <span class="fa fa-google"></span>
            Google
          </div></li>
        </ul>
      </div>

      <hr>

      <h3>Enter your information</h3>
      <div class="form-group">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <!-- !caution! rails automatically recognize @user is to send 'users_controller.rb'.
            when you use different name's controller, an error message 'uninitialized constant UsersController' will be displayed.
            you can choose 2 options to avoid this problem.
            1. create same name's controller(users_controller.rb) to use @user
            2. add options which controller you want to use, and in the controller, which method you want to use... or something -->
        <%= form_for(@user) do |f| %>
          <%= f.label :username %>
          <%= f.text_field :username, placeholder: "Enter username", class: "form-control" %> <br>
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "Enter password", class: "form-control" %> <br>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: "Enter the same password", class: "form-control" %> <br>
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %> <br>
          <%= f.label :phone %>
          <%= f.text_field :phone, placeholder: "Enter your phone number", class: "form-control" %> <br>
          <%= f.label :gender %>
          <%= f.radio_button :gender, "Male" %>Male
          <%= f.radio_button :gender, "Female" %>Female <br><br>
          <%= f.label :date_of_birth %>
          <%= f.date_select :date_of_birth, { :include_blank => false, :start_year => 1900 } %> <br>
          <%= f.label :image %>
          <span class="btn btn-warning btn-file" style="margin-bottom: 20px;">
            Choose File
            <%= f.file_field :image, class: "form-control" %>
          </span> <br>
          <div class="or-box"></div>
          <%= f.submit "Create", class: "btn btn-primary btn-block" %> <br>
          <%= link_to("You already have an account?", login_path) %>
        <% end %>
      </div>
    </div>
  </div>
</div>


