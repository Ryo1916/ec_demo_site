<div class="container">
  <div class="row">
    <div class="col-md-12" style="text-align:center;">
      <h3>Hi! <%= session[:username] %>! </h3>
    </div>
  </div>
  <div class="col-md-6">
    <table class="table bordered-table">
      <thead>
        <th></th>
        <th>Your Information</th>
      </thead>
      <tbody>
        <tr>
          <td>Name</td>
          <td> <%= @user.username %> </td>
        </tr>
        <tr>
          <td>Email</td>
          <td> <%= @user.email %> </td>
        </tr>
        <tr>
          <td>Phone</td>
          <td> <%= @user.phone %> </td>
        </tr>
        <tr>
          <td>Address</td>
          <td></td>
        </tr>
        <tr>
          <td>Your Image</td>
          <td>
            <%= image_tag(@user.image, width: "100%", height: "100%") %> </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to("Edit", edit_user_path(@user), class: "btn btn-success", style: "color: white;") %>
            <%= link_to("Delete", @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white;") %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <p>Purchase History</p>
  </div>
</div>
